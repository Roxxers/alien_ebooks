{
	"command": "${workspaceRoot}/node_modules/.bin/webpack",
	"isShellCommand": true,
	"args": [
		"--display-modules",
		"--progress"
	],
	"echoCommand": true,
	"tasks": [
		{
			"args": [
				"--watch"
			],
			"suppressTaskName": true,
			"taskName": "webpack watch",
			"isBuildCommand": true,
			"problemMatcher": []
		},
		{
			"suppressTaskName": true,
			"taskName": "webpack build",
			"isBuildCommand": true,
			"problemMatcher": []
		}
	]
}